<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
   version="2.0">
   <application>
   	  <locale-config>
	    <default-locale>fr</default-locale>
	    <supported-locale>en</supported-locale>
	    <supported-locale>fr</supported-locale>
  	  </locale-config>
	  <resource-bundle>
		<base-name>messages</base-name>
		<var>msg</var>
	  </resource-bundle>
	  <resource-bundle>
		<base-name>category.messages</base-name>
		<var>msgCat</var>
	  </resource-bundle>
	  <resource-bundle>
		<base-name>customer.messages</base-name>
		<var>msgCus</var>
	  </resource-bundle>
	  <resource-bundle>
		<base-name>product.messages</base-name>
		<var>msgPro</var>
	  </resource-bundle>
	  <resource-bundle>
		<base-name>customerPrice.messages</base-name>
		<var>msgCP</var>
	  </resource-bundle>
	  <resource-bundle>
		<base-name>entry.messages</base-name>
		<var>msgEnt</var>
	  </resource-bundle>
	  <resource-bundle>
		<base-name>sellItem.messages</base-name>
		<var>msgSI</var>
	  </resource-bundle>
	  
	  <view-handler>com.ott.manyprices.view.LocaleViewHandler</view-handler>
    </application>
</faces-config>